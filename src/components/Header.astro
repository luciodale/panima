---
const navLinks = [
  { href: "#chi-siamo", label: "Chi Siamo" },
  { href: "#pane", label: "Il Pane" },
  { href: "#aperitivo", label: "Aperitivo" },
  { href: "#contatti", label: "Contatti" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-500" id="header">
  <div class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
    <a href="/" class="group flex items-center gap-3">
      <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none">
        <path 
          d="M12 28 C5 24 3 16 7 8 C11 1 20 0 25 5 C29 9 29 16 25 20 C21 24 16 24 13 21 C11 19 11 16 13 14 C15 12 19 12 21 14"
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round"
          class="text-charcoal group-hover:text-earth-dark transition-colors"
        />
        <path 
          d="M11 23 C8 19 10 13 15 12 C19 11 21 15 20 19"
          stroke="currentColor"
          stroke-width="1.5" 
          stroke-linecap="round"
          class="text-earth group-hover:text-earth-dark transition-colors"
        />
        <circle cx="17" cy="17" r="1" class="fill-earth group-hover:fill-earth-dark transition-colors"/>
      </svg>
      <span class="font-display text-2xl tracking-wide text-charcoal group-hover:text-earth-dark transition-colors">
        Panima
      </span>
    </a>
    
    <nav class="hidden md:block">
      <ul class="flex items-center gap-10">
        {navLinks.map((link) => (
          <li>
            <a 
              href={link.href}
              class="text-sm tracking-widest uppercase text-charcoal-light hover:text-earth-dark transition-colors relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-earth hover:after:w-full after:transition-all"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <button 
      class="md:hidden p-2 text-charcoal"
      id="mobile-menu-toggle"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div class="md:hidden hidden bg-cream/98 backdrop-blur-sm" id="mobile-menu">
    <nav class="px-6 py-8">
      <ul class="flex flex-col gap-6">
        {navLinks.map((link) => (
          <li>
            <a 
              href={link.href}
              class="text-lg tracking-wider text-charcoal hover:text-earth-dark transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById('header');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  // Header background on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('bg-cream/95', 'backdrop-blur-sm', 'shadow-sm');
    } else {
      header?.classList.remove('bg-cream/95', 'backdrop-blur-sm', 'shadow-sm');
    }
  });
  
  // Mobile menu toggle
  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
