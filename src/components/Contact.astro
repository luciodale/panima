---
const hours = [
  { day: "Martedì - Venerdì", time: "7:30 - 14:00 / 17:00 - 20:00" },
  { day: "Sabato", time: "8:00 - 14:00 / 17:00 - 21:00" },
  { day: "Domenica", time: "8:00 - 13:00" },
  { day: "Lunedì", time: "Chiuso" },
];
---

<section id="contatti" class="py-32 texture-overlay">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center space-y-6 mb-20">
      <p class="text-sm tracking-[0.3em] uppercase text-earth-dark">
        Vieni a Trovarci
      </p>
      <h2 class="font-display text-5xl md:text-6xl text-charcoal">
        Contatti
      </h2>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Address -->
      <div class="space-y-4 text-center lg:text-left">
        <h3 class="text-sm tracking-widest uppercase text-charcoal">
          Dove Siamo
        </h3>
        <div class="text-charcoal-light space-y-1">
          <p>Via del Forno, 23</p>
          <p>00100 Roma (RM)</p>
          <p>Italia</p>
        </div>
        <a 
          href="#" 
          class="inline-flex items-center gap-2 text-sm text-earth-dark hover:text-charcoal transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>Apri in Google Maps</span>
        </a>
      </div>
      
      <!-- Hours -->
      <div class="space-y-4 text-center lg:text-left">
        <h3 class="text-sm tracking-widest uppercase text-charcoal">
          Orari
        </h3>
        <ul class="space-y-2">
          {hours.map((item) => (
            <li class="flex flex-col sm:flex-row sm:justify-between gap-1 text-charcoal-light">
              <span class="font-medium text-charcoal">{item.day}</span>
              <span class="text-sm">{item.time}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div class="space-y-4 text-center lg:text-left">
        <h3 class="text-sm tracking-widest uppercase text-charcoal">
          Contattaci
        </h3>
        <div class="space-y-3">
          <a 
            href="tel:+39061234567" 
            class="flex items-center justify-center lg:justify-start gap-3 text-charcoal-light hover:text-earth-dark transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>+39 06 123 4567</span>
          </a>
          <a 
            href="mailto:ciao@panima.it" 
            class="flex items-center justify-center lg:justify-start gap-3 text-charcoal-light hover:text-earth-dark transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>ciao@panima.it</span>
          </a>
          <a 
            href="#" 
            class="flex items-center justify-center lg:justify-start gap-3 text-charcoal-light hover:text-earth-dark transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <span>@panima.forno</span>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Map placeholder -->
    <div class="mt-20">
      <div class="aspect-[21/9] bg-sand flex items-center justify-center text-clay">
        <div class="text-center space-y-3">
          <svg class="w-12 h-12 mx-auto opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
          </svg>
          <p class="text-sm tracking-wide">Mappa interattiva</p>
        </div>
      </div>
    </div>
  </div>
</section>
