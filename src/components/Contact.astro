---
import SectionHeader from './ui/SectionHeader.astro';

const hours = [
  { day: "Mar - Ven:", time: "7:30 – 14:00 · 17:00 – 20:00" },
  { day: "Sabato:", time: "8:00 – 14:00 · 17:00 – 21:00" },
  { day: "Domenica:", time: "8:00 – 13:00" },
  { day: "Lunedì:", time: "Chiuso" },
];
---

<section id="contatti" class="py-20 md:py-32 lg:py-40 bg-sand texture-overlay">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="mb-12 md:mb-20 reveal">
      <SectionHeader tagline="Vieni a Trovarci" title="Contatti" align="center" />
    </div>
    
    <!-- Content -->
    <div class="flex flex-col md:flex-row items-center md:items-start text-center md:text-left justify-center gap-10 md:gap-16 lg:gap-24 reveal-stagger">
      <!-- Address -->
      <div class="space-y-4 md:space-y-6">
        <svg class="w-6 h-6 text-gold mx-auto md:mx-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <div>
          <h3 class="text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.3em] uppercase text-charcoal mb-3 md:mb-4">Dove Siamo</h3>
          <div class="text-sm md:text-base text-charcoal-light space-y-1">
            <p>Via del Forno, 23</p>
            <p>00100 Roma (RM)</p>
          </div>
        </div>
        <a 
          href="#" 
          class="inline-flex items-center gap-2 text-xs md:text-sm text-amber hover:text-charcoal transition-colors group"
        >
          <span>Apri in Maps</span>
          <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      
      <!-- Hours -->
      <div class="space-y-4 md:space-y-6">
        <svg class="w-6 h-6 text-gold mx-auto md:mx-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.3em] uppercase text-charcoal mb-3 md:mb-4">Orari</h3>
          <ul class="space-y-0.5 md:space-y-1">
            {hours.map((item) => (
              <li class="text-sm md:text-base text-charcoal-light">
                <span class="text-charcoal">{item.day}</span>
                <br class="md:hidden" />
                <span class="text-xs md:text-sm"> {item.time}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Contact -->
      <div class="space-y-4 md:space-y-6">
        <svg class="w-6 h-6 text-gold mx-auto md:mx-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <div>
          <h3 class="text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.3em] uppercase text-charcoal mb-3 md:mb-4">Contattaci</h3>
          <div class="space-y-2 md:space-y-3 text-sm md:text-base">
            <a href="tel:+39061234567" class="block text-charcoal-light hover:text-amber transition-colors">
              +39 06 123 4567
            </a>
            <a href="mailto:ciao@panima.it" class="block text-charcoal-light hover:text-amber transition-colors">
              ciao@panima.it
            </a>
            <a href="#" class="block text-charcoal-light hover:text-amber transition-colors">
              @panima.forno
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Map -->
    <div class="mt-12 md:mt-20 reveal">
      <div class="aspect-video md:aspect-21/9 overflow-hidden">
        <img 
          src="https://images.unsplash.com/photo-1524661135-423995f22d0b?w=1200&q=80" 
          alt="Mappa di Roma"
          class="w-full h-full object-cover grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-700"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
