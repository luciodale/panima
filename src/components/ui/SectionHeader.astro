---
interface Props {
  tagline: string;
  title: string;
  taglineI18n?: string;
  titleI18n?: string;
  align?: 'left' | 'center';
  class?: string;
}

const { tagline, title, taglineI18n, titleI18n, align = 'left', class: className = '' } = Astro.props;
const alignClass = align === 'center' ? 'text-center' : '';
---

<div class:list={['space-y-3 md:space-y-4', alignClass, className]}>
  <p 
    class="text-[10px] md:text-xs tracking-[0.3em] md:tracking-[0.4em] uppercase text-amber font-medium"
    data-i18n={taglineI18n}
  >
    {tagline}
  </p>
  <h2 
    class="font-display text-4xl md:text-5xl lg:text-7xl text-charcoal leading-[0.95]"
    data-i18n={titleI18n}
    data-i18n-html
  >
    <Fragment set:html={title} />
  </h2>
</div>
