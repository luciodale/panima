---
interface Props {
  width?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { width = 'md', class: className = '' } = Astro.props;

const widthClass = {
  sm: 'w-8 md:w-12',
  md: 'w-12 md:w-16',
  lg: 'w-16 md:w-24',
}[width];
---

<div class:list={['h-px bg-earth/40', widthClass, className]}></div>

