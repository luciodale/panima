---
interface Props {
  href: string;
  label: string;
  i18nKey?: string;
  class?: string;
}

const { href, label, i18nKey, class: className = '' } = Astro.props;
---

<a 
  href={href}
  class:list={['group inline-flex items-center gap-3 md:gap-4 text-charcoal hover:text-amber transition-colors', className]}
>
  <span 
    class="text-xs md:text-sm tracking-[0.15em] md:tracking-[0.2em] uppercase"
    data-i18n={i18nKey}
  >
    {label}
  </span>
  <span class="w-8 md:w-12 h-px bg-current group-hover:w-16 md:group-hover:w-20 transition-all duration-500"></span>
  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
  </svg>
</a>
