---
import ArrowLink from './ui/ArrowLink.astro';
---

<section class="relative min-h-screen flex items-center justify-center bg-cream overflow-hidden">
  
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <div class="space-y-6">
      <!-- Logo (includes illustration and name) -->
      <div class="flex justify-center hero-reveal" style="--delay: 0ms;">
        <img 
          src="/panima.svg" 
          alt="PÃ nima" 
          class="h-32 md:h-48 w-auto"
        />
      </div>
      
      <!-- Small tagline with line -->
      <div class="flex items-center justify-center gap-4 hero-reveal" style="--delay: 150ms;">
        <div class="w-8 md:w-12 h-px bg-gold/50"></div>
        <p class="text-[10px] md:text-xs tracking-[0.3em] md:tracking-[0.4em] uppercase text-amber font-medium">
          Micro Forno Artigianale
        </p>
        <div class="w-8 md:w-12 h-px bg-gold/50"></div>
      </div>
      
      <!-- Subtitle -->
      <p class="font-display text-xl md:text-4xl text-charcoal-light italic hero-reveal" style="--delay: 300ms;">
        L'arte del lievito madre
      </p>
      
      <!-- Divider -->
      <div class="flex justify-center hero-reveal" style="--delay: 400ms;">
        <div class="w-16 h-px bg-linear-to-r from-transparent via-gold to-transparent"></div>
      </div>
      
      <!-- Description -->
      <p class="text-sm md:text-lg text-charcoal-light/80 max-w-md mx-auto hero-reveal" style="--delay: 500ms;">
        Pane fatto a mano, gusti unici, momenti autentici.
      </p>
      
      <!-- CTA -->
      <div class="pt-6 md:pt-8 hero-reveal flex justify-center" style="--delay: 600ms;">
        <ArrowLink href="#pane" label="Scopri il pane" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-reveal {
    opacity: 0;
    transform: translateY(30px);
    animation: heroReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }
  
  @keyframes heroReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
