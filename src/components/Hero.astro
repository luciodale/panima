---
import ArrowLink from './ui/ArrowLink.astro';
---

<section class="relative min-h-screen flex items-center justify-center texture-overlay overflow-hidden">
  <!-- Subtle animated background gradients -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 -left-1/4 w-[400px] md:w-[600px] h-[400px] md:h-[600px] bg-sand/30 rounded-full blur-[100px] animate-float"></div>
    <div class="absolute bottom-1/4 -right-1/4 w-[300px] md:w-[500px] h-[300px] md:h-[500px] bg-earth/10 rounded-full blur-[100px] animate-float-delayed"></div>
  </div>
  
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <div class="space-y-6">
      <!-- Illustration -->
      <div class="flex justify-center hero-reveal" style="--delay: 0ms;">
        <img 
          src="/panima-illustration.svg" 
          alt="" 
          class="w-20 h-24 md:w-28 md:h-36"
        />
      </div>
      
      <!-- Small tagline with line -->
      <div class="flex items-center justify-center gap-4 hero-reveal" style="--delay: 100ms;">
        <div class="w-8 md:w-12 h-px bg-earth/50"></div>
        <p class="text-[10px] md:text-xs tracking-[0.3em] md:tracking-[0.4em] uppercase text-clay font-medium">
          Micro Forno Artigianale
        </p>
        <div class="w-8 md:w-12 h-px bg-earth/50"></div>
      </div>
      
      <!-- Main title -->
      <h1 class="text-display font-display text-charcoal hero-reveal" style="--delay: 200ms;">
        PÃ nima
      </h1>
      
      <!-- Subtitle -->
      <p class="font-display text-xl md:text-4xl text-charcoal-light italic hero-reveal" style="--delay: 350ms;">
        L'arte del lievito madre
      </p>
      
      <!-- Divider -->
      <div class="flex justify-center hero-reveal" style="--delay: 450ms;">
        <div class="w-16 h-px bg-linear-to-r from-transparent via-earth to-transparent"></div>
      </div>
      
      <!-- Description -->
      <p class="text-sm md:text-lg text-charcoal-light/80 max-w-md mx-auto hero-reveal" style="--delay: 550ms;">
        Pane fatto a mano, gusti unici, momenti autentici.
      </p>
      
      <!-- CTA -->
      <div class="pt-6 md:pt-8 hero-reveal flex justify-center" style="--delay: 650ms;">
        <ArrowLink href="#pane" label="Scopri il pane" />
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.05); }
  }
  
  @keyframes float-delayed {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.03); }
  }
  
  .animate-float {
    animation: float 20s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float-delayed 25s ease-in-out infinite;
    animation-delay: -5s;
  }
  
  .hero-reveal {
    opacity: 0;
    transform: translateY(30px);
    animation: heroReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }
  
  @keyframes heroReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
