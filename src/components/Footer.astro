---
const currentYear = new Date().getFullYear();
---

<footer class="py-12 md:py-20 bg-forest-dark text-cream">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Top section -->
    <div class="flex flex-col items-center text-center mb-10 md:mb-16">
      <!-- Logo (includes illustration and name) -->
      <img 
        src="/panima.svg" 
        alt="Panima" 
        class="w-24 md:w-28 mb-4 md:mb-6"
      />
      
      <p class="text-sand/70 text-xs md:text-sm tracking-widest uppercase">Micro Forno Artigianale</p>
    </div>
    
    <!-- Divider -->
    <div class="flex justify-center mb-10 md:mb-16">
      <div class="w-16 md:w-24 h-px bg-linear-to-r from-transparent via-forest/40 to-transparent"></div>
    </div>
    
    <!-- Bottom section -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6 md:gap-8">
      <!-- Social links -->
      <div class="flex items-center gap-6 md:gap-8 order-2 md:order-1">
        <a 
          href="#" 
          class="text-sand/60 hover:text-cream transition-colors"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
