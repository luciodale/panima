<section id="pane" class="py-20 md:py-32 lg:py-40 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 md:gap-8 mb-8 md:mb-12 reveal">
      <SectionHeader 
        tagline="Le Nostre Creazioni" 
        taglineI18n="breads.tagline"
        title="Il Pane" 
        titleI18n="breads.title"
      />
      <p class="text-charcoal-light max-w-sm text-sm leading-relaxed" data-i18n="breads.description">
        Ogni variet√† nasce dallo stesso lievito madre, nutrito ogni giorno con dedizione.
      </p>
    </div>
    
    <!-- Filter -->
    <nav class="mb-8 md:mb-12 reveal" aria-label="Filtra per tipo">
      <ul class="flex items-center gap-2 md:gap-3">
        <li>
          <button 
            class="bread-filter relative px-4 py-2 text-xs tracking-[0.15em] uppercase transition-colors duration-300"
            data-filter="all"
            aria-pressed="true"
          >
            <span class="relative z-10" data-i18n="breads.filterAll">Tutti</span>
            <img 
              src="/panima-circle.svg" 
              alt="" 
              class="filter-shape absolute inset-0 w-full h-full object-fill pointer-events-none text-gold"
            />
          </button>
        </li>
        <li>
          <button 
            class="bread-filter relative px-4 py-2 text-xs tracking-[0.15em] uppercase transition-colors duration-300"
            data-filter="classic"
            aria-pressed="false"
          >
            <span class="relative z-10" data-i18n="breads.filterClassic">Classici</span>
            <img 
              src="/panima-circle.svg" 
              alt="" 
              class="filter-shape absolute inset-0 w-full h-full object-fill pointer-events-none text-gold"
            />
          </button>
        </li>
        <li>
          <button 
            class="bread-filter relative px-4 py-2 text-xs tracking-[0.15em] uppercase transition-colors duration-300"
            data-filter="special"
            aria-pressed="false"
          >
            <span class="relative z-10" data-i18n="breads.filterSpecial">Speciali</span>
            <img 
              src="/panima-circle.svg" 
              alt="" 
              class="filter-shape absolute inset-0 w-full h-full object-fill pointer-events-none text-gold"
            />
          </button>
        </li>
      </ul>
    </nav>
  </div>
  
  <!-- Horizontal scroll container - no gap, using margin instead -->
  <div id="breads-gallery" class="horizontal-scroll px-6 pb-6 md:pb-8 reveal">
    {breads.map((bread) => (
      <article 
        class="bread-card group relative w-[75vw] md:w-[320px] lg:w-[360px] shrink-0 mr-5 md:mr-8"
        data-type={bread.type}
        data-bread-id={bread.id}
      >
        <!-- Image with overlay -->
        <div class="relative aspect-4/3 md:aspect-square lg:aspect-3/4 overflow-hidden bg-sand">
          <img 
            src={bread.image}
            alt=""
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000 ease-out"
            loading="lazy"
          />
          <!-- Gradient overlay - stronger for readability -->
          <div class="absolute inset-0 bg-linear-to-t from-charcoal/80 via-charcoal/30 to-charcoal/5"></div>
          
          <!-- Content overlay -->
          <div class="absolute bottom-0 left-0 right-0 p-5 md:p-6">
            <!-- Gold accent line -->
            <div class="w-8 h-px bg-gold/60 mb-4 group-hover:w-12 transition-all duration-500"></div>
            <h3 
              class="font-display text-3xl md:text-4xl text-cream mb-2"
              data-i18n={`breads.items.${bread.id}.name`}
            >
            </h3>
            <p 
              class="text-sm text-cream/80 leading-relaxed"
              data-i18n={`breads.items.${bread.id}.description`}
            >
            </p>
          </div>
        </div>
      </article>
    ))}
  </div>
  
  <div class="hidden md:block max-w-7xl mx-auto px-6 mt-6 md:mt-8">
    <div class="flex items-center gap-3 text-amber">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
      <span class="text-xs tracking-wider uppercase" data-i18n="breads.scrollHint">Scorri per vedere tutti</span>
    </div>
  </div>
</section>

<style>
  .bread-filter {
    color: var(--color-charcoal-light);
  }
  
  .bread-filter .filter-shape {
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .bread-filter[aria-pressed="true"] {
    color: var(--color-charcoal);
  }
  
  .bread-filter[aria-pressed="true"] .filter-shape {
    opacity: 1;
  }
  
  .bread-filter:hover:not([aria-pressed="true"]) {
    color: var(--color-charcoal);
  }
  
  .bread-filter:hover:not([aria-pressed="true"]) .filter-shape {
    opacity: 0.4;
  }
  
  /* Hidden cards - completely removed from layout */
  .bread-card.is-hidden {
    display: none;
  }
</style>

<script>
  import { getStoredLanguage } from '../i18n/i18n';
import { translations } from '../i18n/translations';
  
  const filterButtons = document.querySelectorAll('.bread-filter');
  const breadCards = document.querySelectorAll('.bread-card');
  const gallery = document.getElementById('breads-gallery');
  
  // Initialize bread card content with translations
  function updateBreadCards() {
    const lang = getStoredLanguage();
    const t = translations[lang];
    
    breadCards.forEach(card => {
      const breadId = card.getAttribute('data-bread-id') as keyof typeof t.breads.items;
      if (breadId && t.breads.items[breadId]) {
        const nameEl = card.querySelector('[data-i18n$=".name"]');
        const descEl = card.querySelector('[data-i18n$=".description"]');
        
        if (nameEl) nameEl.textContent = t.breads.items[breadId].name;
        if (descEl) descEl.textContent = t.breads.items[breadId].description;
      }
    });
  }
  
  // Run on load
  updateBreadCards();
  
  // Listen for language changes
  document.addEventListener('DOMContentLoaded', updateBreadCards);
  
  // Observe localStorage changes for language
  window.addEventListener('storage', (e) => {
    if (e.key === 'panima-lang') {
      updateBreadCards();
    }
  });
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      // Update active state
      filterButtons.forEach(btn => btn.setAttribute('aria-pressed', 'false'));
      button.setAttribute('aria-pressed', 'true');
      
      // Filter cards
      breadCards.forEach(card => {
        const cardType = card.getAttribute('data-type');
        const shouldShow = filter === 'all' || cardType === filter;
        
        if (shouldShow) {
          card.classList.remove('is-hidden');
        } else {
          card.classList.add('is-hidden');
        }
      });
      
      // Reset scroll position
      if (gallery) {
        gallery.scrollTo({ left: 0, behavior: 'smooth' });
      }
    });
  });
</script>
