---
import SectionHeader from './ui/SectionHeader.astro';

const breads = [
  {
    name: "Classico",
    description: "Crosta croccante, mollica alveolata. Semplicita perfetta.",
    image: "https://images.unsplash.com/photo-1549931319-a545dcf3bc73?w=600&q=80",
  },
  {
    name: "Cioccolato",
    description: "Note intense di cacao 70%. Ideale con formaggi stagionati.",
    image: "https://images.unsplash.com/photo-1534620808146-d33bb39128b2?w=600&q=80",
  },
  {
    name: "Peperoncino",
    description: "Fuoco mediterraneo. Carattere deciso, persistenza delicata.",
    image: "https://images.unsplash.com/photo-1555507036-ab1f4038808a?w=600&q=80",
  },
  {
    name: "Bacon",
    description: "Sapore avvolgente e affumicatura naturale.",
    image: "https://images.unsplash.com/photo-1598373182133-52452f7691ef?w=600&q=80",
  },
  {
    name: "Olive",
    description: "Taggiasche nel nostro impasto. Mediterraneo in ogni morso.",
    image: "https://images.unsplash.com/photo-1574085733277-851d9d856a3a?w=600&q=80",
  },
  {
    name: "Noci e Miele",
    description: "Dolcezza naturale e croccantezza. Perfetto a colazione.",
    image: "https://images.unsplash.com/photo-1509440159596-0249088772ff?w=600&q=80",
  },
];
---

<section id="pane" class="py-20 md:py-32 lg:py-40 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 md:gap-8 mb-10 md:mb-16 reveal">
      <SectionHeader tagline="Le Nostre Creazioni" title="Il Pane" />
      <p class="text-charcoal-light max-w-sm text-sm leading-relaxed">
        Ogni varieta nasce dallo stesso lievito madre, nutrito con passione.
      </p>
    </div>
  </div>
  
  <!-- Horizontal scroll container -->
  <div class="horizontal-scroll gap-5 md:gap-8 px-6 pb-6 md:pb-8 reveal">
    {breads.map((bread) => (
      <article class="group relative w-[75vw] md:w-[320px] lg:w-[360px] shrink-0">
        <!-- Image with overlay -->
        <div class="relative aspect-4/3 md:aspect-square lg:aspect-3/4 overflow-hidden bg-sand">
          <img 
            src={bread.image}
            alt={bread.name}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000 ease-out"
            loading="lazy"
          />
          <!-- Gradient overlay - stronger for readability -->
          <div class="absolute inset-0 bg-linear-to-t from-charcoal/80 via-charcoal/30 to-charcoal/5"></div>
          
          <!-- Content overlay -->
          <div class="absolute bottom-0 left-0 right-0 p-5 md:p-6">
            <!-- Gold accent line -->
            <div class="w-8 h-px bg-gold/60 mb-4 group-hover:w-12 transition-all duration-500"></div>
            <h3 class="font-display text-3xl md:text-4xl text-cream mb-2">
              {bread.name}
            </h3>
            <p class="text-sm text-cream/80 leading-relaxed">
              {bread.description}
            </p>
          </div>
        </div>
      </article>
    ))}
  </div>
  
  <div class="hidden md:block max-w-7xl mx-auto px-6 mt-6 md:mt-8">
    <div class="flex items-center gap-3 text-amber">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
      <span class="text-xs tracking-wider uppercase">Scorri per vedere tutti</span>
    </div>
  </div>
</section>
