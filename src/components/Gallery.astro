---
import SectionHeader from './ui/SectionHeader.astro';

const images = [
  { 
    label: "Il forno a pietra",
    image: "https://images.unsplash.com/photo-1571066811602-716837d681de?w=1200&q=80"
  },
  { 
    label: "Pane appena sfornato",
    image: "https://images.unsplash.com/photo-1589367920969-ab8e050bbb04?w=1200&q=80"
  },
  { 
    label: "Lievito madre",
    image: "https://images.unsplash.com/photo-1586765677067-f8030bd8e303?w=1200&q=80"
  },
  { 
    label: "Ingredienti",
    image: "https://images.unsplash.com/photo-1558961363-fa8fdf82db35?w=1200&q=80"
  },
  { 
    label: "L'interno",
    image: "https://images.unsplash.com/photo-1568254183919-78a4f43a2877?w=1200&q=80"
  },
];
---

<section class="py-20 md:py-32 lg:py-40 bg-warm-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 mb-10 md:mb-16">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 md:gap-8 reveal">
      <SectionHeader tagline="Dietro le Quinte" title="Galleria" />
      <a href="#" class="group inline-flex items-center gap-2 md:gap-3 text-charcoal-light hover:text-charcoal transition-colors">
        <span class="text-xs md:text-sm tracking-wider">@panima.forno</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Horizontal scroll gallery -->
  <div class="horizontal-scroll gap-4 md:gap-6 px-6 reveal">
    {images.map((image, index) => (
      <figure class="group relative flex-shrink-0 w-[80vw] md:w-[50vw] lg:w-[40vw] overflow-hidden">
        <div class="aspect-3/4 md:aspect-4/5 overflow-hidden bg-sand">
          <img 
            src={image.image}
            alt={image.label}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000 ease-out"
            loading="lazy"
          />
        </div>
        <figcaption class="mt-4 flex items-center justify-between">
          <span class="text-xs md:text-sm text-charcoal-light tracking-wide">{image.label}</span>
          <span class="text-xs text-clay font-display">{String(index + 1).padStart(2, '0')}</span>
        </figcaption>
      </figure>
    ))}
  </div>
</section>
