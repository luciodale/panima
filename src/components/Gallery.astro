---
const images = [
  { aspect: "aspect-[4/3]", label: "Il forno a pietra" },
  { aspect: "aspect-square", label: "Pane appena sfornato" },
  { aspect: "aspect-[3/4]", label: "Lievito madre" },
  { aspect: "aspect-[3/4]", label: "Ingredienti selezionati" },
  { aspect: "aspect-square", label: "L'interno del locale" },
  { aspect: "aspect-[4/3]", label: "Dettagli artigianali" },
];
---

<section class="py-32 bg-warm-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center space-y-6 mb-16">
      <p class="text-sm tracking-[0.3em] uppercase text-earth-dark">
        Dietro le Quinte
      </p>
      <h2 class="font-display text-5xl md:text-6xl text-charcoal">
        Galleria
      </h2>
    </div>
    
    <!-- Masonry-style grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {images.map((image, index) => (
        <div 
          class={`${image.aspect} bg-sand overflow-hidden group cursor-pointer ${index === 2 || index === 3 ? 'md:row-span-2' : ''}`}
        >
          <div class="w-full h-full flex items-center justify-center text-clay relative">
            <div class="absolute inset-0 bg-charcoal/0 group-hover:bg-charcoal/10 transition-all duration-500"></div>
            <div class="text-center space-y-2 z-10">
              <svg class="w-10 h-10 mx-auto opacity-40 group-hover:opacity-60 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-xs tracking-wide opacity-0 group-hover:opacity-100 transition-opacity">{image.label}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
